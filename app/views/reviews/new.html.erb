<h1><%= @restaurant.name %></h1>
<h2>New review</h2>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit class: "btn btn-primary mt-2" %>
<% end %>

<%= link_to restaurants_path,  class: "btn btn-light mt-2" do %>
  <i class="fas fa-undo-alt"> Back to list</i>
<% end %>